<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51A6FA"
    tools:context=".Cadastro">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plantas_removebg_preview" />

    <EditText
        android:id="@+id/txtNome_usu"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/borda_redonda"
        android:ems="10"
        android:hint="Nome Usuário"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/borda_redonda"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNome_usu" />

    <TextView
        android:id="@+id/link2"
        android:layout_width="201dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:text="No mínimo 4 caracteres*"
        android:textColor="#1F1BEC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.328"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSenha" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/borda_redonda"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

    <Button
        android:id="@+id/btnCadastro"
        android:layout_width="202dp"
        android:layout_height="62dp"
        android:layout_marginTop="28dp"
        android:insetBottom="2dp"
        android:text="Cadastrar"
        android:textAllCaps="false"
        android:textSize="24dp"
        app:backgroundTint="#3356D0"
        app:cornerRadius="9dp"
        app:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/link2"
        app:strokeColor="#3338C1"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="350dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/plantas_removebg_preview" />

</androidx.constraintlayout.widget.ConstraintLayout>