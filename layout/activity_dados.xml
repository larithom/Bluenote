<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51A6FA"
    tools:context=".Dados">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="238dp"
        android:layout_height="37dp"
        android:layout_marginTop="144dp"
        android:text="Dados pessoais"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plantas_removebg_preview" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="350dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/plantas_removebg_preview" />

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/borda_redonda"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/borda_redonda"
        android:ems="10"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUsuario" />

    <Button
        android:id="@+id/btnNivel"
        android:layout_width="294dp"
        android:layout_height="60dp"
        android:layout_marginTop="364dp"
        android:insetBottom="2dp"
        android:textAllCaps="false"
        android:textSize="24dp"
        app:backgroundTint="#FFB426"
        app:cornerRadius="9dp"
        app:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#CE7A1B"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="139dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="14dp"
        android:insetBottom="2dp"
        android:text="Salvar"
        android:textAllCaps="false"
        android:textSize="24dp"
        app:backgroundTint="#FFEB3B"
        app:cornerRadius="9dp"
        app:fontFamily="@font/poppins"
        app:layout_constraintEnd_toStartOf="@+id/btnSenha"
        app:layout_constraintStart_toStartOf="@+id/btnNivel"
        app:layout_constraintTop_toBottomOf="@+id/btnNivel"
        app:strokeColor="#FF9800"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btnSenha"
        android:layout_width="139dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:insetBottom="2dp"
        android:text="Senha"
        android:textAllCaps="false"
        android:textSize="24dp"
        app:backgroundTint="#FFEB3B"
        app:cornerRadius="9dp"
        app:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@+id/btnNivel"
        app:layout_constraintTop_toBottomOf="@+id/btnNivel"
        app:strokeColor="#FF9800"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>