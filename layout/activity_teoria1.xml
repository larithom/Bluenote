<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51A6FA"
    tools:context=".Teoria1"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imgProximo2"
        android:layout_width="350dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/plantas_removebg_preview" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plantas_removebg_preview" />

    <ImageView
        android:id="@+id/imgProxima"
        android:layout_width="33dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="9dp"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="@+id/btnDados"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnVoltar"
        app:layout_constraintTop_toBottomOf="@+id/btnDados"
        app:srcCompat="@drawable/abc_vector_test" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="Voltar"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:backgroundTint="#FF9800"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="@+id/btnDados"
        app:layout_constraintTop_toBottomOf="@+id/btnDados"
        app:strokeColor="#FF5722"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btnDados"
        android:layout_width="306dp"
        android:layout_height="270dp"
        android:fontFamily="@font/poppins"
        android:text='Quando tocamos duas notas ao mesmo tempo ou uma após a outra, há uma diferença de frequência, ou um "espaço" entre sons emitidos. Essa diferença é a distância que irá separar as duas notas e que faz com que nosso ouvido perceba que elas são diferentes. Em música, chamamos isso de intervalo musical.'
        android:textAllCaps="false"
        android:textSize="12sp"
        app:backgroundTint="#FF9800"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:strokeColor="#FF5722"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Teoria"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

</androidx.constraintlayout.widget.ConstraintLayout>