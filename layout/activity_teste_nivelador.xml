<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51A6FA"
    android:usesCleartextTraffic="true"
    tools:context=".Teste_nivelador">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plantas_removebg_preview" />

    <TextView
        android:id="@+id/txtPergunta"
        android:layout_width="326dp"
        android:layout_height="66dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="Texto"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <Button
        android:id="@+id/btnOpc1"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:text="1 "
        android:textAllCaps="false"
        app:backgroundTint="#FF9800"
        app:cornerRadius="15dp"
        app:icon="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPergunta"
        app:strokeColor="#FF9800" />

    <Button
        android:id="@+id/btnOpc2"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:text="2 "
        android:textAllCaps="false"
        app:backgroundTint="#FF9800"
        app:cornerRadius="15dp"
        app:icon="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="@+id/btnOpc1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnOpc1"
        app:layout_constraintTop_toBottomOf="@+id/btnOpc1"
        app:strokeColor="#CD7A00" />

    <Button
        android:id="@+id/btnOpc3"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:text="3 "
        android:textAllCaps="false"
        app:backgroundTint="#FF9800"
        app:cornerRadius="15dp"
        app:icon="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="@+id/btnOpc2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnOpc2"
        app:layout_constraintTop_toBottomOf="@+id/btnOpc2"
        app:strokeColor="#CD7A00" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="@+id/btnOpc4"
        app:layout_constraintTop_toBottomOf="@+id/btnOpc4"
        app:srcCompat="@drawable/abc_vector_test" />

    <Button
        android:id="@+id/btnOpc4"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:text="4 "
        android:textAllCaps="false"
        app:backgroundTint="#FF9800"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/imgProximo"
        app:layout_constraintEnd_toEndOf="@+id/btnOpc3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnOpc3"
        app:layout_constraintTop_toBottomOf="@+id/btnOpc3"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#CD7A00" />

    <ImageView
        android:id="@+id/imgProximo"
        android:layout_width="350dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/plantas_removebg_preview" />

    <ImageView
        android:id="@+id/imgPergunta"
        android:layout_width="258dp"
        android:layout_height="72dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPergunta"
        app:srcCompat="@drawable/exo" />

</androidx.constraintlayout.widget.ConstraintLayout>