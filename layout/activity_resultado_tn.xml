<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51A6FA"
    tools:context=".Resultado_tn">

    <Button
        android:id="@+id/btnPorcentagem"
        android:layout_width="187dp"
        android:layout_height="100dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/poppins"
        android:text="100%"
        android:textAllCaps="false"
        android:textSize="38sp"
        app:backgroundTint="#3F51B5"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:strokeColor="#13216C"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plantas_removebg_preview" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="350dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/plantas_removebg_preview" />

    <TextView
        android:id="@+id/txtMensagem"
        android:layout_width="324dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:text="Mensagem"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="319dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:text="VocÃª acertou:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@+id/txtMensagem"
        app:layout_constraintStart_toStartOf="@+id/txtMensagem"
        app:layout_constraintTop_toBottomOf="@+id/txtMensagem" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="319dp"
        android:layout_height="44dp"
        android:layout_marginTop="25dp"
        android:text="Bem-vind@ ao:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPorcentagem" />

    <Button
        android:id="@+id/btnNivel"
        android:layout_width="279dp"
        android:layout_height="64dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins"
        android:text="Nivel"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:backgroundTint="#FFC107"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:strokeColor="#FF9800"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>